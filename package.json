    "typescript": "5.1.6",
    "vite": "4.4.9",
    "vitest": "0.34.2"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@floating-ui/dom": "^1.1.1",
    "@floating-ui/react": "^0.19.0",
    "classnames": "^2.3.2",
    "date-fns": "^2.29.3",
    "use-latest": "^1.2.1"
